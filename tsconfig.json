{
  "compileOnSave": true,
  "compilerOptions": {
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap":true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "strict": true,
    "module": "CommonJS",
    "target": "ES2018",
    "skipLibCheck": true,
    "outDir": "./bin"
  },
  "include": [
    "src/*.ts"
  ]
}